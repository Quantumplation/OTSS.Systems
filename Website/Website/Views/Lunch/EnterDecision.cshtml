@model Website.ViewModels.Web.EnterLunchDecisionViewModel
<div class="row">
    <div class="col-md-12">
    @using (Html.BeginForm("EnterDecision", "Lunch", FormMethod.Post, new { @class = "form-inline" }))
    {
        <h3>Enter Lunch Decision</h3>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.DropDownListFor(m => m.SelectedPollId, Model.LunchPolls, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Decision, new { id = "decision-box", @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        <hr />
    }
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/typeahead.jquery.js"></script>
    <script src="~/Scripts/bloodhound.js"></script>
    <script src="~/Scripts/lunch.js"></script>
    <script>
        $(function () {
            lunchAutocomplete("#decision-box");
        });
    </script>
}